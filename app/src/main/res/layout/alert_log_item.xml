<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <ImageView
      android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_my_calendar"
      android:id="@+id/imageView"  android:layout_width="80dp"/>
  <TableLayout
      android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1">
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
      <TextView
          android:id="@+id/time_window"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Time window"/>
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
      <TextView
          android:id="@+id/confirm_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Confirm time"/>
    </TableRow>
  </TableLayout>
</LinearLayout>
